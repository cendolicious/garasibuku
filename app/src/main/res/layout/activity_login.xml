<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dickyeka.garasibuku.LoginActivity"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="@drawable/bglogin">

    <TextView
        android:textColor="#FFFFFF"
        android:textSize="20pt"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garasi Buku"
        android:id="@+id/textView3"
        android:layout_marginTop="120dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="false" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0.30"
        android:background="@drawable/borderedit"
        android:hint="NIM"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#eebec4" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginTop="10dp"
        android:alpha="0.30"
        android:background="@drawable/borderedit"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#eebec4" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bordereditbtn"
        android:text="Login"
        android:id="@+id/button"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/button">
    <TextView
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum punya akun?"
        android:textSize="6pt"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:layout_below="@+id/button" />

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar yuk!"
        android:textColor="#FFFFFF"
        android:textSize="6pt"
        android:id="@+id/textView5"
        android:layout_alignRight="@+id/textView4"
        />
    </LinearLayout>

    <ProgressBar
        android:progressDrawable="@drawable/circular_progress_bar"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />
</RelativeLayout>
